{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "DatabaseConnectionTemplate": "Host=localhost;Database=Plants;Username={0};Password={1}",
  "Connection": {
    "EventStore": {
      "Template": "esdb://localhost:2113?tls=true&tlsVerifyCert=false"
    },
    "MongoDb": {
      "Template": "mongodb://{0}:{1}@localhost:27017/?authSource=admin",
      "DatabaseName": "Dev"
    },
    "ElasticSearch": {
      "Template": "https://{0}:{1}@localhost:9200"
    },
    "DefaultCreds": {
      "Username": "admin",
      "Password": "changeit"
    }
  },
  "CORS": {
    "Origins": [
      "localhost:1234"
    ]
  },
  "HealthChecks-UI": {
    "DisableMigrations": true,
    "HealthChecks": [
      {
        "Name": "Health",
        "Uri": "/health"
      }
    ],
    "EvaluationTimeOnSeconds": 10,
    "MinimumSecondsBetweenFailureNotifications": 60,
    "MaximumExecutionHistoriesPerEndpoint": 15
  },
  "Serilog": {
    "MinimumLevel": "Verbose",
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Destructure": [
      {
        "Name": "ToMaximumDepth",
        "Args": { "maximumDestructuringDepth": 4 }
      },
      {
        "Name": "ToMaximumStringLength",
        "Args": { "maximumStringLength": 100 }
      },
      {
        "Name": "ToMaximumCollectionCount",
        "Args": { "maximumCollectionCount": 10 }
      }
    ],
    "Properties": {
      "Application": "Plants",
      "Environment": "Dev"
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel": "Information",
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log.txt",
          "rollingInterval": "Day",
          "fileSizeLimitBytes": 26214400,
          "minimumLogEventLevel": "Information"
        }
      },
      {
        "Name": "Elasticsearch",
        "Args": {
          "nodeUris": "https://admin:changeit@localhost:9200",
          "indexFormat": "plants-dev-{0:yyyy.MM.dd}",
          "minimumLogEventLevel": "Information",
          "connectionTimeout": 5,
          "emitEventFailure": "WriteToSelfLog",
          "deadLetterIndexName": "td-deadletter-{0:yyyy.MM.dd}",
          "registerTemplateFailure": "IndexAnyway",
          "TypeName": null,
          "AutoRegisterTemplateVersion": 3
        }
      }
    ]
  }
}
